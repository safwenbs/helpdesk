{% extends  "::dashboard.html.twig" %}
{% block title %} Notifications {% endblock %}
{% block header %} My notifications {% endblock %}
{% block mainpage %}
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Unseen notifications :   {{ notifs.getTotalItemCount }}
            </div>
            <div class="panel-body">
                {% if  notifs.getTotalItemCount >0 %}

                {% for notif in notifs %}
                    <div class="col-lg-6">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                Request {{notif.notificationID.messageID.subject}}
                            </div>
                            <div class="panel-body">
                                <ul>
                                    <li>
                                        {{notif.notificationID.notif}}
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="navigation" style="float: right;">
                    {{ knp_pagination_render(notifs) }}
            </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
