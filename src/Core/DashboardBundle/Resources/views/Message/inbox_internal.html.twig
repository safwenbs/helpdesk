{% extends  "::dashboard.html.twig" %}
{% block title %} Requests {% endblock %}
{% block header %} Requests received {% endblock %}
{% block mainpage %}
<div class="col-lg-12">
    {% for flashMessage in app.session.flashbag.get('moveRequest') %}
            <div class="alert alert-info">
                {{ flashMessage }}
            </div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('closeRequest') %}
            <div class="alert alert-info">
                {{ flashMessage }}
            </div>
    {% endfor %}
    <div class="panel panel-default">
        <div class="panel-heading">
            Requests received Total {{messages.getTotalItemCount}}
        </div>
        <div class="panel-body">
            {% if  messages.getTotalItemCount >0 %}
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Subject</th>
                            <th>Demand type</th>
                            <th>Created on</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for message in messages %}
                            
                                <tr {% if message.isviewed ==0 %}class="danger"{% endif %}>
                                    <td>{{message.subject }}</td>
                                    <td>{{message.demandType.demandType}}</td>
                                    <td>{{message.createdOn|date('d-m-Y')}}</td>
                                    <td>{{message.status}}</td>
                                    <td style="text-align: center"><a href="{{path('treat_message',{'id':message.id})}}" class="btn btn-info {% if message.status not in ['opened','ongoing'] %}disabled{% endif %}">Treat</a></td>
                                </tr>
                            
                        {% endfor %}
                        
                    </tbody>
                </table>
                <div class="navigation" style="float: right;">
                    {{ knp_pagination_render(messages) }}
                </div>
                        
            </div>
                        
            <!-- /.table-responsive -->
          {% endif %}  
           
        </div>
    </div>
</div>
{% endblock %}
