{% extends  "::dashboard.html.twig" %}
{% block title %}Edit profile{% endblock %}
{% block header %}Edit profile {% endblock %}
{% block mainpage %}
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Edit profile
            </div>
            <div class="panel-body">
                <form role="form"  action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST">
                    <div class="form-group">
                        <label>Firstname</label>
                         {{ form_widget(form.firstname,  {'attr': {'class':'form-control'} }) }}
                         {{ form_errors(form.firstname) }}
                    </div>
                    <div class="form-group">
                        <label>Lastname</label>
                         {{ form_widget(form.lastname,  {'attr': {'class':'form-control'} }) }}
                         {{ form_errors(form.lastname) }}
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                         {{ form_widget(form.email,  {'attr': {'required':'required','class':'form-control','type':'email'} }) }}
                         {{ form_errors(form.email) }}
                    </div>
                    {#<div class="form-group">
                        <label>Username</label>
                         {{ form_widget(form.username,  {'attr': {'class':'form-control'} }) }}
                         {{ form_errors(form.username) }}
                    </div>#}
                     <div class="form-group">
                        <label>Current password</label>
                         {{ form_widget(form.current_password,  {'attr': {'required':'required','class':'form-control','type':'password'} }) }}
                         {{ form_errors(form.current_password) }}
                    </div>
                    
                    {{ form_rest(form) }}
                    
                    <input type="submit" class="btn btn-primary" value="Edit" />
                </form>
            </div>
        </div>

    </div>
{% endblock %}