{% extends  "::dashboard.html.twig" %}
{% block title %}Edit password{% endblock %}
{% block header %}Edit password {% endblock %}
{% block mainpage %}
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Edit password
            </div>
            <div class="panel-body">
                <form role="form"  action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST">
                    <div class="form-group">
                        <label>Current password</label>
                         {{ form_widget(form.current_password,  {'attr': {'required':'required','class':'form-control','type':'password'} }) }}
                         {{ form_errors(form.current_password) }}
                    </div>
                    <div class="form-group">
                        <label>New password</label>
                         {{ form_widget(form.plainPassword.first,  {'attr': {'required':'required','class':'form-control','type':'password'} }) }}
                         {{ form_errors(form.plainPassword.first) }}
                    </div>
                    <div class="form-group">
                        <label>Confirm new password</label>
                         {{ form_widget(form.plainPassword.second,  {'attr': {'required':'required','class':'form-control','type':'password'} }) }}
                         {{ form_errors(form.plainPassword.second) }}
                    </div>
                    
                    {{ form_rest(form) }}
                    
                    <input type="submit" class="btn btn-primary" value="Edit" />
                </form>
            </div>
        </div>

    </div>
{% endblock %}