{% extends  "::dashboard.html.twig" %}
{% block title %} Dependecy users {% endblock %}
{% block header %} Dependecy users {% endblock %}
{% block mainpage %}
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            Dependecy {{group.name}} users list :   {{ internals.getTotalItemCount }}
        </div>
        <div class="panel-body">
            {% if  internals.getTotalItemCount >0 %}
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Firstname</th>
                            <th>LastName</th>
                            <th>Enabled</th>
                            <th>IsBoss</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for internal in internals %}
                        <tr>
                            <td>{{internal.id}}</td>
                            <td>{{internal.firstname}}</td>
                            <td>{{internal.lastname}}</td>
                            <td>{% if internal.enabled %}Yes{% else %}No{% endif %}</td>
                            <td>{% if internal.isboss %}Yes{% else %}No{% endif %}</td>
                        </tr>
                        {% endfor %}
                        
                    </tbody>
                </table>
                <div class="navigation" style="float: right;">
                    {{ knp_pagination_render(internals) }}
                </div>
                        
            </div>
          {% endif %}  
        </div>
    </div>
</div>
{% endblock %}
