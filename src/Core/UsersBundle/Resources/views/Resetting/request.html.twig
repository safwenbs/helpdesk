{% extends 'CoreUsersBundle::layout.html.twig' %}
{% block title %}Helpdesk resetting password{% endblock %}
{% block fos_user_content %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">Resetting your password</h3>
                </div>
                <div class="panel-body">
                    {% if invalid_username is defined %}
                            <div class="alert alert-danger">
                                Invalid username or email
                            </div>
                    {% endif %}
                    <form role="form" action="{{ path('fos_user_resetting_send_email') }}" method="post">
                            <fieldset>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Email or username</label>
                                    <div class="col-sm-12">
                                            <input class="form-control" id="username" name="username" required="required">
                                    </div>
                                </div>
                                <input style="margin-top: 100px;" class="btn btn-lg btn-success btn-block" type="submit" value="Reset" />
                            </fieldset>
                     </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}