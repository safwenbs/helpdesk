{% extends 'CoreUsersBundle::layout.html.twig' %}
{% block title %}Helpdesk resetting password{% endblock %}
{% block fos_user_content %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">Resetting your password</h3>
                </div>
                <div class="panel-body">
                    <form role="form" action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST">
                        <fieldset>
                            {{ form_widget(form._token) }}
                            <div class="form-group">
                                <label class="col-sm-4 control-label">New password</label>
                                <div class="col-sm-12">
                                    {{ form_widget(form.plainPassword.first,  {'attr': {'required':'required','class':'form-control','type':'password'} }) }}
                                    {{ form_errors(form.plainPassword.first) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Confirm your new password</label>
                                <div class="col-sm-12">
                                    {{ form_widget(form.plainPassword.second,  {'attr': {'required':'required','class':'form-control','type':'password'} }) }}
                                    {{ form_errors(form.plainPassword.second) }}
                                </div>
                            </div>
                                <input style="margin-top: 100px;" class="btn btn btn-primary pull-right" type="submit" value="Reset">
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}